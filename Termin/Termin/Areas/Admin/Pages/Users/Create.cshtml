@page
@model Termin.Areas.Admin.Pages.Users.CreateModel
@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@* ViewLocalizer path is Resources.Pages.Index *@
@inject IViewLocalizer ViewLocalizer
<h1>@ViewLocalizer["Create"]</h1>

<h4>@ViewLocalizer["User"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserModel.Email" class="control-label"></label>
                <input asp-for="UserModel.Email" class="form-control" />
                <span asp-validation-for="UserModel.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserModel.FirstName" class="control-label"></label>
                <input asp-for="UserModel.FirstName" class="form-control" />
                <span asp-validation-for="UserModel.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserModel.MiddleName" class="control-label"></label>
                <input asp-for="UserModel.MiddleName" class="form-control" />
                <span asp-validation-for="UserModel.MiddleName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UserModel.LasName" class="control-label"></label>
                <input asp-for="UserModel.LasName" class="form-control" />
                <span asp-validation-for="UserModel.LasName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserModel.UserName" class="control-label"></label>
                <input asp-for="UserModel.UserName" class="form-control" />
                <span asp-validation-for="UserModel.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserModel.PhoneNumber" class="control-label"></label>
                <input asp-for="UserModel.PhoneNumber" class="form-control" />
                <span asp-validation-for="UserModel.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UserModel.Password"></label>
                <input asp-for="UserModel.Password" class="form-control" />
                <span asp-validation-for="UserModel.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserModel.ConfirmPassword"></label>
                <input asp-for="UserModel.ConfirmPassword" class="form-control" />
                <span asp-validation-for="UserModel.ConfirmPassword" class="text-danger"></span>
            </div>



            <div class="form-group">
                <label asp-for="UserModel.RoleName" class="control-label"></label>
                <select asp-for="UserModel.RoleName" class="form-control" asp-items="ViewBag.RoleName">
                    <option value="">No Role</option>
                </select>
            </div>
            <div class="form-check">
                <input asp-for="UserModel.LockoutEnabled" class="form-check-input" id="flexPhone" />
                <label asp-for="UserModel.LockoutEnabled" class="form-check-label" for="flexPhone"></label>
                <span asp-validation-for="UserModel.LockoutEnabled" class="text-danger"></span>
            </div>
            <div class="form-check">
                <input asp-for="UserModel.PhoneNumberConfirmed" class="form-check-input" id="flexTwo" />
                <label asp-for="UserModel.PhoneNumberConfirmed" class="form-check-label" for="flexTwo"></label>
                <span asp-validation-for="UserModel.PhoneNumberConfirmed" class="text-danger"></span>
            </div>
            <div class="form-check">
                <input asp-for="UserModel.TwoFactorEnabled" class="form-check-input" id="flexCheckLockout" />
                <label asp-for="UserModel.TwoFactorEnabled" class="form-check-label" for="flexCheckLockout"></label>
                <span asp-validation-for="UserModel.TwoFactorEnabled" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>
