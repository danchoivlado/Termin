@page
@model Termin.Areas.Admin.Pages.Users.EditModel
@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@* ViewLocalizer path is Resources.Pages.Index *@
@inject IViewLocalizer ViewLocalizer
@{
    ViewData["Title"] = "Edit";
}

<h1>@ViewLocalizer["Edit"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EditUserModel.Id" />
            <div class="form-group">
                <label asp-for="EditUserModel.Email" class="control-label"></label>
                <input asp-for="EditUserModel.Email" class="form-control" />
                <span asp-validation-for="EditUserModel.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EditUserModel.FirstName" class="control-label"></label>
                <input asp-for="EditUserModel.FirstName" class="form-control" />
                <span asp-validation-for="EditUserModel.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EditUserModel.MiddleName" class="control-label"></label>
                <input asp-for="EditUserModel.MiddleName" class="form-control" />
                <span asp-validation-for="EditUserModel.MiddleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EditUserModel.LasName" class="control-label"></label>
                <input asp-for="EditUserModel.LasName" class="form-control" />
                <span asp-validation-for="EditUserModel.LasName" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="EditUserModel.LockoutEnabled" /> @Html.DisplayNameFor(model => model.EditUserModel.LockoutEnabled)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="EditUserModel.UserName" class="control-label"></label>
                <input asp-for="EditUserModel.UserName" class="form-control" />
                <span asp-validation-for="EditUserModel.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EditUserModel.PhoneNumber" class="control-label"></label>
                <input asp-for="EditUserModel.PhoneNumber" class="form-control" />
                <span asp-validation-for="EditUserModel.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="EditUserModel.PhoneNumberConfirmed" /> @Html.DisplayNameFor(model => model.EditUserModel.PhoneNumberConfirmed)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="EditUserModel.TwoFactorEnabled" /> @Html.DisplayNameFor(model => model.EditUserModel.TwoFactorEnabled)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="@ViewLocalizer["Save"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">@ViewLocalizer["Back to List"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
