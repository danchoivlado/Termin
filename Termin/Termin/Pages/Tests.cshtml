@page
@model Termin.Pages.TestsModel
@{
}
<div class="portlet">

    <form method="post" asp-page-handler="FilterForm">
        <div class="form-group">
            <div class="form-check form-check-inline">
                <input class="form-control rounded" type="search" asp-for="InputSearch.FilterValue" placeholder="Search" aria-label="Search">
            </div>
            <div class="form-check form-check-inline">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </div>
        </div>

        <div class="form-group">
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" id="inlineCheckbox1" asp-for="InputSearch.Active">
                <label class="form-check-label" for="inlineCheckbox1">Active</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" id="inlineCheckbox2" asp-for="InputSearch.Current">
                <label class="form-check-label" for="inlineCheckbox2">Current</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" id="inlineCheckbox3" asp-for="InputSearch.Passed">
                <label class="form-check-label" for="inlineCheckbox3">Past</label>
            </div>
        </div>
    </form>

    <h3>Test</h3>

</div>